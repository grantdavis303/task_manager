<h1> Edit <%= @task.title %> </h1>

<%= form_with url: task_path, method: :patch, data: {turbo: false} do |form| %>
  <%= form.label "Title:" %> <br>
  <%= form.text_field :title %> <br>

  <br>

  <%= form.label "Description:" %> <br>
  <%= form.text_area :description, size: '60x12' %> <br>

  <br>
  <%= form.submit "Update" %>
<% end %>