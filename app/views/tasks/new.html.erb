<h1> New Task </h1>

<%= form_with url: tasks_path, method: :post, data: {turbo: false} do |form| %>
  <%= form.label "Title:" %> <br>
  <%= form.text_field :title %> <br>

  <br>

  <%= form.label "Description:" %> <br>
  <%= form.text_area :description, size: '60x12' %> <br>

  <br>
  <%= form.submit "Submit Form" %>
<% end %>